<h2>Add a song to the music wall</h2>

<% if @song && @song.errors.any? %>
  <p>Submission failed for the following reasons:</p>
  <ul>
    <% @song.errors.full_messages.each do |message| %>
      <li><%= message%></li>
    <% end %>
  </ul>
<% end %>

<form method='post' action='/'>
  <div>
    <label>Song Title</label>
    <input type='text' name='title' value='<%= @song && @song.title %>'>
  </div>
  <div>
    <label>Artist Name</label>
    <input type='text' name='author' value='<%= @song && @song.author %>'>
  </div>
  <div>
    <label>Song URL (optional)</label>
    <input type='text' name='url' value='<%= @song && @song.url %>'>
  </div>
  <button>Submit</button>
</form>

<hr>

<span><a href='/'>Back to Music Wall</a></span>