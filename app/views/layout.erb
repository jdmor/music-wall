<!DOCTYPE html>
<html lang="en">
<head>

  <link rel="stylesheet" href="/stylesheets/application.css">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/javascript/application.js"></script>

  <title></title>
</head>
<body>

  <% @user = User.find_by(id: session['user_id']) %>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <% if @user %>
          <form method='POST' action='/signout' class='navbar-right'>
            <input type='hidden' name='sign_out' value='true'>
            <button type="submit" class="btn btn-default navbar-btn">Sign out</button>
          </form>
          <p class='navbar-text navbar-right'>Signed in with <%= @user.email%></p>
        <% else %>
        <a href='/login' class="btn btn-primary navbar-btn navbar-right">Sign in</a>
        <% end %>
      </div>
    </div>
  </nav>

  <div id='main' class='container-fluid'>
    <%= yield %>
  </div>
</body>
</html>
