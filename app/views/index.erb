<div class='intro'>
  <h1><small>The Interwebz</small></h1>
  <h1>Community Music Wall</h1>
  <a class='btn btn-primary' href='/new'>Add song</a>
</div>

<ul class='list-group list-group-songs'>
  <% @songs.each do |song| %>
  <li class='list-group-item'>
    <% if song.url && !song.url.empty? %><a class='badge' href='<%= song.url%>'>Listen</a><% end %>
    <h4 class='list-group-item-heading'><%= song.title%> - <%= song.author%></h4>
    <p class="list-group-item-text">Posted by <%= song.user_id && User.find_by(id: song.user_id).email %></p>
  </li>
  <% end %>
</ul>